{
  "name": "the-game-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for The Game",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "npx cdk",
    "deploy": "npx cdk deploy",
    "deploy:all": "npx cdk deploy --all",
    "deploy:role": "npx cdk deploy GitHubActionsRoleStack",
    "deploy:game": "npx cdk deploy TheGameStack",
    "synth": "npx cdk synth",
    "diff": "npx cdk diff"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^24.0.0",
    "aws-cdk": "^2.100.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
